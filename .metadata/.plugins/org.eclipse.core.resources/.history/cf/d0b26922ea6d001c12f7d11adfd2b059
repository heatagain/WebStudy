		<%
		response.setContentType("text/html; charset=utf-8");
		String name = request.getParameter("name");
		String java = request.getParameter("java");
		String web = request.getParameter("web");
		String iot = request.getParameter("iot");
		String android = request.getParameter("android");
		
		int intjava = Integer.parseInt(java);
		int intweb = Integer.parseInt(web);
		int intiot = Integer.parseInt(iot);
		int intandroid = Integer.parseInt(android);
		
		int sum = intjava + intweb + intiot + intandroid;
		int avg = sum / 4;
		String grade =""; 
		if(avg >= 95){
			grade = "A+";
		}
		else if(avg >= 85){
			grade = "A";
		}
		else if(avg >= 80){
			grade = "B+";
		}
		else if(avg >= 70){
			grade = "C";
		}
		else {
			grade = "F";
		}
		
		out.print("<table>");
		 out.print("<tr>");
		 out.print("<td>이름</td>");
		 out.print("<td>"+ name +"</td>");
		 out.print("</tr>");
		 out.print("<tr>");
		 out.print("<td>JAVA점수</td>");
		 out.print("<td>"+ intjava +"</td>");
		 out.print("</tr>");
		 out.print("<tr>");
		 out.print("<td>WEB점수</td>");
		 out.print("<td>"+ intweb +"</td>");
		 out.print("</tr>");
		 out.print("<tr>");
		 out.print("<td>IOT점수</td>");
		 out.print("<td>"+ intiot +"</td>");
		 out.print("</tr>");
		 out.print("<tr>");
		 out.print("<td>ANDROID점수</td>");
		 out.print("<td>"+ intandroid +"</td>");
		 out.print("</tr>");
		 out.print("<tr>");
		 out.print("<td>평균</td>");
		 out.print("<td>"+ avg +"</td>");
		 out.print("</tr>");
		 out.print("<tr>");
		 out.print("<td>학점</td>");
		 out.print("<td>"+ grade +"</td>");
		 out.print("</tr>");
		out.print("</table>");
		
		
		
%>
</body>
